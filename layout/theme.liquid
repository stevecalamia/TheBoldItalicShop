  {% when "'Ubuntu Condensed', sans-serif" %}
    <link href='http://fonts.googleapis.com/css?family=Ubuntu+Condensed' rel='stylesheet' type='text/css'>
  {% endcase %}

  {{ 'style.css' | asset_url | stylesheet_tag }}{% if template contains 'product' and settings.main_image_display == 'Lightbox' %}
  {{ 'jquery.fancybox-1.3.4.css' | asset_url | stylesheet_tag }}{% endif %}
  {{ 'modernizr.js' | asset_url | script_tag }}
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js' | script_tag }}
  {{ 'jquery.ba-throttle-debounce.min.js' | asset_url | script_tag }}
  {{ 'option_selection.js' | shopify_asset_url | script_tag }}

  {% if template contains 'customers' %}
    {{ "shopify_common.js" | shopify_asset_url | script_tag }}
    {{ "customer_area.js"  | shopify_asset_url | script_tag }}
  {% endif %}

  <script language="JavaScript">
    HoverNav = {

       shown: false,
       overFloatingNav: false,
       overHoverNav: false,
       originallySelectedColumn: null,

       init:function () {
           var self = this;

           if($('#hoverNav').length == 0){
               return;
           }

           $('#floatingNav .two').hover(
               function() {
                   self.overFloatingNav = true;
                   self._onHoverStateChange();
               },
               function() {
                   self.overFloatingNav = false;
                   self._onHoverStateChange();
               }
           );

           $('#hoverNav').hover(
               function() {
                   self.overHoverNav = true;
                   self._onHoverStateChange();
               },
               function() {
                   self.overHoverNav = false;
                   self._onHoverStateChange();
               }
           );

           this.originallySelectedColumn = $('.two.selected');

           this._addHoverBehaviorToColumn('read');
           this._addHoverBehaviorToColumn('do');
           this._addHoverBehaviorToColumn('shop');

       },

       _addHoverBehaviorToColumn: function(column) {
           var self = this;
           $('.' + column + '_header, .' + column + '_links').hover(
               function(){
                   self.originallySelectedColumn.removeClass('selected');
                   $('.' + column + '_header, .' + column + '_links').addClass('selected');
               },
               function(){
                   $('.' + column + '_header, .' + column + '_links').removeClass('selected');
               }
           );
       },

       _onHoverStateChange:function () {
           var self = this;
           var f = $.debounce(function () {
               if(self.overHoverNav || self.overFloatingNav) {
                   if(!self.shown) {
                       self._animateIn.call(self);
                   }
               } else if (!self.overHoverNav && !self.overFloatingNav) {
                   if(self.shown) {
                       self.originallySelectedColumn.addClass('selected');
                       self._animateOut();
                   }
               }
           }, 300)
           f();
       },

       _animateIn:function () {
           if(this.shown || this.hidden) {
               return false;
           }
           this.shown = true;
           var f = $('#hoverNav');
           f.css('top', '-200px');
           f.show();
           f.animate({
               top: 0
           }, 250, function () {
               // Animation complete.
               f.css('top', 0);
           });
       },

       _animateOut:function () {
           if(!this.shown) {
               return false;
           }
           this.shown = false;
           var f = $('#hoverNav');
           f.animate({
               top:'-200px'
           }, 50, function () {
               f.hide();
               f.css('top', '-200px');
           });
       }
    };
  </script>
  <script language="JavaScript">
  $(document).ready(function() {
    HoverNav.init();
  });
  </script>

</head>

